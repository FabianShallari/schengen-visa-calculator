<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchengenVisaCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/europe_blue</item>
        <item name="colorPrimaryVariant">@color/europe_blue_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/europe_gold</item>
        <item name="colorSecondaryVariant">@color/europe_gold_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="backgroundColor">@color/white</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/backgroundColor</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SchengenVisaCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.SchengenVisaCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>